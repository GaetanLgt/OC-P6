{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {{ include('layouts/_navbar.html.twig') }}
    <h1>Snowtricks</h1>
    <p>Page d'accueil</p>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Les figures</h2>
                <p>Voici la liste des figures</p>
                <ul>
                    {% for trick in tricks %}
                        <li><a href="{{ path('trick_show', {'slug': trick.slug}) }}">{{ trick.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>


{% endblock %}
