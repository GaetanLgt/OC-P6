{% extends 'base.html.twig' %}

{% block body %}
    {% set i = 0 %}
    {% for item in trick.media %}
        {% if item.type == "image" %}
            {% set i = i + 1 %}
            {% if i == "1" %}
                <div class="title" style="background-image:'{{ item.url }}'">
                    <h1 class="title-title">{{ trick.name }}</h1>
                </div>
                {% endif %}
            {% endif %}
       
    {% endfor %}
        
    
    <div class="container">
        <div class="row">
                {% for media in trick.media %}
                    {% if media.type == "image" %}
                    <div class="col-md-4">
                        <img src="{{ media.url }}" class="img-fluid">
                    </div>
                    {% elseif media.type == "embed" %}
                        {{ media.content | raw }}
                    {% endif %}
                {% endfor %}
                <div class="trick-description">
                    <p>{{ trick.description }}</p>
                </div>
        </div>

{% endblock %}